<FabricTheme>
    <StylePreloader LoadAllComponents="true" />
    <LayerHost Style="display:flex; flex-direction: row;width:100vw;height:100vh;overflow:hidden;">
        <Router AppAssembly="typeof(Program).Assembly" >
            <Found Context="routeData">
                <ResponsiveCascader>
                    <RouteView RouteData="routeData" DefaultLayout="@typeof(MainLayout)" />
                </ResponsiveCascader>
            </Found>
            <NotFound>
                <p>Page not found.</p>
            </NotFound>
        </Router>
    </LayerHost>
</FabricTheme>