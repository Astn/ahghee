	|> limit 500
    |> follow * 1
	|> limit 500
	|> follow * 1
	|> limit 500
*/

// put some data in
// put ""your/wonderful/id"" 
//     ""key"":""value"",
//     ""key2"":""value2"",
//     ""linkname"":@""someid"",
//     ""anotherlink"":@""anotherid"";

//     ""someid""
//         ""likes"":@""your/wonderful/id"",
//         ""doesnt/like"":@""anotherid"";

//     ""anotherid""
//         ""name"":""whatever you like"",
//         ""follows"":@""1"";  

